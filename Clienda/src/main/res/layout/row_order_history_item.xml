<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/orderItemProduct"
        android:textStyle="italic"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/orderItemDate"
        android:layout_below="@+id/orderItemProduct"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/orderItemProduct"
        android:layout_toLeftOf="@+id/orderItemDebt"
        android:text="@string/order_debt"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/orderItemDebtText"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/orderItemProduct"
        android:layout_alignParentRight="true"
        android:id="@+id/orderItemDebt"
        android:layout_marginTop="5dp" />

</RelativeLayout>